<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="600" Height="100"
		WindowStartupLocation="CenterScreen"
		CanResize="False"
        x:Class="UpdaterAvalonia.MainWindow"
        Title="Cybertron Updater">
	<Grid Name="UIPanel" VerticalAlignment="Center" Margin="20, 10, 20, 20" RowDefinitions="Auto, *">
		<TextBlock Name="UILabel" Text="FFmpeg" HorizontalAlignment="Center" Grid.Row="0"/>
		<ProgressBar Name="UIProgress" Foreground="Blue" Minimum="0" Maximum="1" Height="20" Margin="0, 10, 0, 0" Grid.Row="1"/>
	</Grid>
</Window>
